#!/usr/bin/env python3

"""
gdrive-cat: Display file content from Google Drive
"""

import os
import sys

sys.path.insert(0, os.path.dirname(os.path.dirname(os.path.abspath(__file__))))

from gdrive import GDriveCLI, error_exit, get_program_name, requires_workspace

@requires_workspace
def main():
    program_name = get_program_name()
    
    if len(sys.argv) < 2:
        print(f"usage: {program_name} <file>", file=sys.stderr)
        sys.exit(1)
    
    if sys.argv[1] == '--help':
        print(f"""usage: {program_name} <file>

Display the content of a file from Google Drive.

Arguments:
    <file>    Name of the file to display

Examples:
    {program_name} README.md
    {program_name} "My Document"
    {program_name} "App Idea"
""")
        sys.exit(0)
    
    filename = sys.argv[1]
    
    try:
        drive = GDriveCLI()
        
        files = drive.list_drive_files(name_filter=filename)
        
        if not files:
            error_exit(program_name, f"file not found: {filename}")
        
        file = files[0]
        
        if len(files) > 1:
            print(f"# Displaying: {file['name']} (found {len(files)} matches)", file=sys.stderr)
        
        content = drive.get_file_content(file['id'])
        print(content)
        
        drive.close()
    
    except Exception as e:
        error_exit(program_name, str(e))

if __name__ == '__main__':
    main()